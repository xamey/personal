---
import { Image } from "astro:assets"
---
<div class="center-box">
    <div class="animated-border-box-glow"></div>
    <div class="animated-border-box">
        <Image src="/xameyz.png" alt="Xameyz" width="256" height="256" />
    </div>
</div>

<style>
    .animated-border-box, .animated-border-box-glow{
      max-height: 256px;
      max-width: 256px;
      height: 100%;
      width: 100%;
      position: absolute;
      overflow: hidden; 
      z-index: 0;
      border-radius: 10px;
    }

    .animated-border-box-glow{
      overflow: hidden;
      filter: blur(20px);
    }

    .animated-border-box:before, .animated-border-box-glow:before {
      content: '';
      z-index: -2;
      text-align: center;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(0deg);
      position: absolute;
      width: 99999px;
      height: 99999px;
      background-repeat: no-repeat;
      background-position: 0 0;
      background-image: conic-gradient(rgba(0,0,0,0), #18af3b, rgba(0,0,0,0) 25%);
      animation: rotate 7s linear infinite;
    }

    .animated-border-box:after {
      content: '';
      position: absolute;
      z-index: -1;
      left: 5px;
      top: 5px;
      width: calc(100% - 10px);
      height: calc(100% - 10px);
      background: #000000;
      border-radius: 7px;
    }

    @keyframes rotate {
      100% {
        transform: translate(-50%, -50%) rotate(1turn);
      }
    }

    body {
      margin: 0px;
    }

    .center-box{
      height: 100vh;
      display: flex;
      align-items: center;
      background-color: #000000;
    }
</style>    